<meta charset="UTF-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<link rel="stylesheet" href="../../assets/stylesheets/animate.css">
<meta name="viewport" content="width=device-width, initial-scale=1">
<div class="container">
<p id="notice"><%= notice %></p>

<h1 class="title">Listing Films</h1>

<table class="content">
  <thead>
    <tr>
      <th>Movie</th>
      <th>Description</th>
      <th>Length</th>
      <th>Director</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @films.each do |film| %>
      <tr>
        <td><%= film.movie %></td>
        <td><%= film.review %></td>
        <td><%= film.length %></td>
        <td><%= film.director %></td>
        <td><%= film.rating %></td>
        <td><%= link_to 'Show', film, class: "link-color" %></td>
        <td><%= link_to 'Edit', edit_film_path(film), class: "link-color" %></td>
        <td><%= link_to 'Destroy', film, method: :delete, data: { confirm: 'Are you sure?' }, class: "link-color" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Film', new_film_path, class: "btn btn-primary" %>
</div>
<script>
  $(document).ready(function() {
    $('.content').addClass('animated fadeInRightBig');
    $('.title').addClass('animated fadeInLeftBig');
});
</script>
